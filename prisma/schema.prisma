generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  telegramId   String?  @unique @map("telegram_id")
  phone        String?  @unique
  passwordHash String?  @map("password_hash")
  name         String?
  username     String?
  role         UserRole @default(customer)
  restaurantId String?  @map("restaurant_id")
  createdAt    DateTime @default(now()) @map("created_at")

  restaurant   Restaurant?   @relation(fields: [restaurantId], references: [id], onDelete: SetNull)
  reservations Reservation[]
  orders       Order[]
  auditLogs    AuditLog[]

  @@map("users")
}

enum UserRole {
  customer
  employee
  admin
}

model Restaurant {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String?
  imageUrl        String?  @map("image_url")
  minOrderAmount  Decimal? @db.Decimal(10, 2) @map("min_order_amount")
  createdAt       DateTime @default(now()) @map("created_at")

  users        User[]
  categories   Category[]
  reservations Reservation[]
  orders       Order[]
  schedules    MenuSchedule[]
  auditLogs    AuditLog[]

  @@map("restaurants")
}

model Category {
  id           String   @id @default(cuid())
  restaurantId String   @map("restaurant_id")
  title        String
  description  String?
  products     Product[]

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("categories")
}

model Product {
  id          String   @id @default(cuid())
  categoryId  String   @map("category_id")
  title       String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?  @map("image_url")
  available   Boolean  @default(true)

  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@map("products")
}

enum ReservationStatus {
  new
  confirmed
  cancelled
  completed
}

model Reservation {
  id           String           @id @default(cuid())
  restaurantId String           @map("restaurant_id")
  userId       String           @map("user_id")
  status       ReservationStatus @default(new)
  startTime    DateTime         @map("start_time")
  endTime      DateTime         @map("end_time")
  personsCount Int              @map("persons_count")
  createdAt    DateTime         @default(now()) @map("created_at")

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders     Order[]

  @@map("reservations")
}

enum OrderStatus {
  new
  confirmed
  in_progress
  ready
  completed
  cancelled
}

enum OrderType {
  dine_in
  delivery
  with_reservation
}

model Order {
  id            String      @id @default(cuid())
  restaurantId  String      @map("restaurant_id")
  reservationId String?     @map("reservation_id")
  userId        String      @map("user_id")
  type          OrderType   @default(dine_in)
  status        OrderStatus @default(new)
  totalAmount   Decimal     @db.Decimal(10, 2) @map("total_amount")
  comment       String?
  createdAt     DateTime    @default(now()) @map("created_at")

  restaurant  Restaurant   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  reservation Reservation? @relation(fields: [reservationId], references: [id], onDelete: SetNull)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String   @map("order_id")
  productId   String   @map("product_id")
  quantity    Int
  priceAtTime Decimal  @db.Decimal(10, 2) @map("price_at_time")
  comment     String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@map("order_items")
}

model MenuSchedule {
  id           String @id @default(cuid())
  restaurantId String @map("restaurant_id")
  dayOfWeek    Int    @map("day_of_week")
  openTime     String @map("open_time")
  closeTime    String @map("close_time")

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("menu_schedules")
}

model AuditLog {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  restaurantId String?  @map("restaurant_id")
  action       String
  entityType   String   @map("entity_type")
  entityId     String   @map("entity_id")
  timestamp    DateTime @default(now())

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}
